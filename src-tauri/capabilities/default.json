{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:default",
    "dialog:default",
    "clipboard-manager:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/yt-dlp",
          "sidecar": true,
          "args": true
        },
        {
          "name": "echo",
          "cmd": "echo",
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "binaries/yt-dlp",
          "sidecar": true,
          "args": true
        }
      ]
    },
    "store:default",
    "os:default",
    "shell:allow-kill"
  ]
}