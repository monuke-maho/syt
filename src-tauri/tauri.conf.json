{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "syt",
  "version": "0.2.5",
  "identifier": "io.github.monuke-maho.syt",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "syt",
        "width": 1200,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/yt-dlp"
    ],
    "windows": {
      "nsis": {
        "languages": [
          "Japanese"
        ]
      },
      "wix": {
        "language": "ja-JP"
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEI3RTg5NUJEMUUyRjRBM0UKUldRK1NpOGV2WlhvdHlPalBkSmgzMnRCd2NuZk9HOUd2WVQxRkoyOHBJczRDTi8zT2hlSFBqMXMK",
      "endpoints": [
        "https://github.com/monuke-maho/syt/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}